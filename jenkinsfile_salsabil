		stage("Maven Build") {
            steps {
                script {
                    sh "mvn package -DskipTests=true"
                }
            }
        }
		        stage('Image Docker '){
            steps{
                script{
                    sh 'docker build -t salsabil1/springprojet .'
                }
            }
        }
			        stage('Login to DockerHub '){
            steps{
                script{
		withCredentials([string(credentialsId: 'dockerhub-pwd', variable: 'dockerhubpwd')]) {
                   sh 'docker login -u salsabil1 -p $dockerhubpwd docker.io'
}                }
            }
        }/*
	        stage('Pushing image to Dockerhub'){
            steps{
                   sh 'docker push salsabil1/springprojet:latest'
                }
            }*/
	    stage('Docker-compose'){
            steps{
                   sh 'docker-compose up -d'
                }
            }
        }
